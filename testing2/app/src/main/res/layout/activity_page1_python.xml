<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page1Python">

    <TextView
        android:id="@+id/q1_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="placeholder"/>


    <RadioGroup
        android:id="@+id/q1_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q1_page1"/>

    <TextView
        android:id="@+id/q2_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q1_group1"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:text="placeholder2"/>

    <RadioGroup
        android:id="@+id/q2_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q2_page1"/>

    <Button
        android:id="@+id/btn_next_pg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_below="@id/q2_group2"/>


</RelativeLayout>